<link href="~/Content/Views/Converter.css" rel="stylesheet" />
<h2 class="text-center">Numbers Converter to String</h2>

<div class="container">
	<form id="frmConv">
		<div class="form-group">
			<label for="inpNumber">Please enter the number you want to convert</label>
			<input name="number" id="inpNumber" class="form-control" placeholder="Enter number here" required/>
		</div>
		<div>
			<input type="button" class="btn btn-default" id="btnFrm" value="Submit"/>
		</div>
		<div class="divData" data-url="@Url.Action("Converter")">
		</div>
	</form>
</div>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/Views/Converter.js"></script>





